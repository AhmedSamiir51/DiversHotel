@model IEnumerable<Divers_Hotel.Models.PriceMealsPerSeason>

@{
    ViewData["Title"] = "Index";
}
<!-- Hero Section Begin -->
<div>
    <!-- Hero Section End -->
    <div id="wrapper" class="toggled">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand"> <a>Dashboard</a> </li>
                <li> <a asp-action="index" asp-controller="RoomsAdmin">Rooms</a> </li>
                <li> <a asp-action="index" asp-controller="RoomSeasons">Rooms Season</a> </li>
                <li> <a asp-action="index" asp-controller="PriceRoomsPerSeasons">Rooms Price</a> </li>
                <li> <a asp-action="index" asp-controller="MealPlans">Meals Plan</a> </li>
                <li> <a asp-action="index" asp-controller="MealSeasons">Meals Season</a> </li>
                <li> <a asp-action="index" asp-controller="PriceMealsPerSeasons">Meal Price</a> </li>
            </ul>
        </div> <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="container" style="margin-top: 155px;">

                    <p>
                        <a asp-action="Create" class="btn btn-info ml-1">Create New</a>
                        <a asp-action="CreateMeal" class="btn btn-info ml-1">Create New Meal</a>
                        <a asp-action="CreateSeason" class="btn btn-info ml-1">Create New Season</a>
                    </p>

                    <div class="container-fluid px-4">

                        <div class="card mb-4">
                            <div class="card-header">
                                Price Meals Per Season
                            </div>
                            <div class="card-body">


                                <table class="table" id="datatablesSimple">
                                    <thead>
                                        <tr>
                                            <th>
                                                Meals Type
                                            </th>
                                            <th>
                                                Season
                                            </th>
                                            <th>
                                                From
                                            </th>
                                            <th>
                                                To
                                            </th>
                                            <th>
                                                Price
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.MealPlan.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MealSeason.NameSeason)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MealSeason.From)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MealSeason.From)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Price)
                                            </td>


                                            <td>

                                                @Html.ActionLink("Edit", "Edit", new { IdMeals = item.MealID, idSeason = item.SeasonId }) |
                                                @Html.ActionLink("Details", "Details", new { IdMeals = item.MealID, idSeason = item.SeasonId }) |
                                                @Html.ActionLink("Delete", "Delete", new { IdMeals = item.MealID, idSeason = item.SeasonId })
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>