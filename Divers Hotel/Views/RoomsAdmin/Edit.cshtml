@model Divers_Hotel.Models.Room

@{
    ViewData["Title"] = "Edit";
}

<!-- Hero Section Begin -->
<div>
    <!-- Hero Section End -->
    <div id="wrapper" class="toggled">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand"> <a>Dashboard</a> </li>
                <li> <a asp-action="index" asp-controller="RoomsAdmin">Rooms</a> </li>
                <li> <a asp-action="index" asp-controller="RoomSeasons">Rooms Season</a> </li>
                <li> <a asp-action="index" asp-controller="PriceRoomsPerSeasons">Rooms Price</a> </li>
                <li> <a asp-action="index" asp-controller="MealPlans">Meals Plan</a> </li>
                <li> <a asp-action="index" asp-controller="MealSeasons">Meals Season</a> </li>
                <li> <a asp-action="index" asp-controller="PriceMealsPerSeasons">Meal Price</a> </li>
            </ul>
        </div> <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="container" style="margin-top: 155px;">

                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="RoomId" />
                                <div class="form-group">
                                    <label asp-for="RoomType" class="control-label"></label>
                                    <input asp-for="RoomType" class="form-control" />
                                    <span asp-validation-for="RoomType" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description" class="control-label"></label>
                                    <input asp-for="Description" class="form-control" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>

                    <div>
                        <a asp-action="Index">Back to List</a>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}